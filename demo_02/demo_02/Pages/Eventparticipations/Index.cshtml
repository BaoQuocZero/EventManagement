@page
@model demo_02.Pages.EventParticipations.IndexModel
@{
    ViewData["Title"] = "Danh sách tham gia sự kiện";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="m-0"><i class="fas fa-users"></i> Danh sách tham gia sự kiện</h3>
                </div>

                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark text-center">
                            <tr>
                                <th><i class="fas fa-hashtag"></i> Mã tham gia</th>
                                <th><i class="fas fa-calendar-alt"></i> Tên sự kiện</th>
                                <th><i class="fas fa-user"></i> Người dùng</th>
                                <th><i class="fas fa-check-circle"></i> Trạng thái</th>
                                <th><i class="fas fa-clock"></i> Thời gian tham gia</th>
                                <th><i class="fas fa-star"></i> Điểm</th>
                                <th><i class="fas fa-cogs"></i> Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="text-center align-middle">
                            @foreach (var item in Model.EventParticipations)
                            {
                                <tr>
                                    <td>@item.ParticipationId</td>
                                    <td>@item.Events?.EventName</td>
                                    <td>@item.User?.FullName</td>
                                    <td>@item.ParticipationStatus</td>
                                    <td>@item.ParticipationTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.EarnedPoints</td>
                                    <td>
                                        <a asp-page="./Detail" asp-route-id="@item.ParticipationId" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.ParticipationId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.ParticipationId"
                                              class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome (Nếu bạn chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
