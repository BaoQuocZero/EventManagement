@page
@model IndexModel
@{
    ViewData["Title"] = "Danh sách sự kiện";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="m-0"><i class="fas fa-calendar-alt"></i> Danh sách sự kiện</h3>
                    <a asp-page="Create" class="btn btn-light text-primary fw-bold">
                        <i class="fas fa-plus-circle"></i> Thêm sự kiện
                    </a>
                </div>

                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark text-center">
                            <tr>
                                <th><i class="fas fa-file-signature"></i> Tên sự kiện</th>
                                <th><i class="fas fa-clock"></i> Thời gian</th>
                                <th><i class="fas fa-map-marker-alt"></i> Địa điểm</th>
                                <th><i class="fas fa-list"></i> Loại sự kiện</th>
                                <th><i class="fas fa-eye"></i> Chi tiết</th>
                                <th><i class="fas fa-edit"></i> Chỉnh sửa</th>
                                <th><i class="fas fa-trash"></i> Xóa</th>
                            </tr>
                        </thead>
                        <tbody class="text-center align-middle">
                            @foreach (var eventItem in Model.Events)
                            {
                                <tr>
                                    <td>@eventItem.EventName</td>
                                    <td>@eventItem.EventTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@eventItem.Location</td>
                                    <td>@eventItem.Eventtypes?.EventtypesName</td>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@eventItem.EventsId" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-page="Edit" asp-route-id="@eventItem.EventsId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@eventItem.EventsId"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa sự kiện này?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome (Nếu bạn chưa có) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
