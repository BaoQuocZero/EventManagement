@page
@model NotificationsModel
@{
    ViewData["Title"] = "Danh sách thông báo";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="m-0"><i class="fas fa-bell"></i> Danh sách thông báo</h3>
                </div>

                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark text-center">
                            <tr>
                                <th><i class="fas fa-file-signature"></i> Tiêu đề</th>
                                <th><i class="fas fa-comment-alt"></i> Nội dung</th>
                                <th><i class="fas fa-list"></i> Loại thông báo</th>
                                <th><i class="fas fa-calendar-alt"></i> Ngày tạo</th>
                                <th><i class="fas fa-eye"></i> Chi tiết</th>
                                <th><i class="fas fa-trash"></i> Xóa</th>
                            </tr>
                        </thead>
                        <tbody class="text-center align-middle">
                            @foreach (var notification in Model.Notifications)
                            {
                                <tr>
                                    <td>@notification.Title</td>
                                    <td>@notification.Message</td>
                                    <td>@notification.Notificationtypes?.Name</td>
                                    <td>@(notification.CreateAt?.ToString("dd/MM/yyyy HH:mm") ?? "Không có dữ liệu")</td>
                                    <td>
                                        <a asp-page="NotificationDetails" asp-route-id="@notification.NotificationsId" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@notification.NotificationsId"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa thông báo này?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
